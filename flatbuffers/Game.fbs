namespace Game;

enum GamePhase: byte {
  Lobby,
  InGame,
  Post,
  Ended,
}

table PlayerRoles {
  red: string; // UUID string
  blue: string;
  green: string;
  yellow: string;
}

table Game {
  id: string; // UUID string
  phase: GamePhase;
  players: PlayerRoles;
  starttime: uint64;
  endtime: uint64;
}

root_type Game;